<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TodoApp.MainWindow"
        Width="400" Height="500"
        Title="ToDoリスト">
  <StackPanel Margin="10" Spacing="8">
    <TextBlock Text="新しいToDo" FontSize="16"/>
    <DockPanel>
      <TextBox Name="InputBox" DockPanel.Dock="Left" Width="250" />
      <Button Content="追加" Click="OnAddClick" Margin="5,0,0,0"/>
    </DockPanel>
    <ListBox Name="TodoList" Height="350"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
      <Button Content="削除" Click="OnRemoveClick"/>
      <Button Content="クリア" Click="OnClearClick"/>
    </StackPanel>
  </StackPanel>
</Window>
